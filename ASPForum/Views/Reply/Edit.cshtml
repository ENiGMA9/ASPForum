@model ASPForum.Models.Reply
@{
    ViewBag.Title = "Edit Reply";
}

<h2 class="page-title">Edit Reply</h2>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm(actionName: "Edit", controllerName: "Reply", method: FormMethod.Post, htmlAttributes: new { @class = "form-group" }))
        {
            @Html.HttpMethodOverride(HttpVerbs.Put)

            @Html.Hidden("categoryId", (int)ViewBag.CategoryId)
            @Html.Hidden("subjectId", (int)ViewBag.SubjectId)
            @Html.Hidden("threadId", Model.Thread.Id)

            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Author)

            @Html.LabelFor(model => model.Content, "Content:")
            @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control text-area"} });
            <br />

            <button type="submit" class="btn btn-success">Save</button>
        }
    </div>
</div>