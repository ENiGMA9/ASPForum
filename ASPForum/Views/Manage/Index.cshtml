@model ASPForum.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account details</h4>
    <hr />
    @using (Html.BeginForm(actionName: "ChangeAvatar", controllerName: "Manage", method: FormMethod.Post))
    {

        @*
            Avatar area
        *@
        if (ViewBag.User.Avatar == null)
        {
            <div class="avatar-picture">
                <img src="https://static.scientificamerican.com/blogs/cache/file/BB6F1FE0-4FDE-4E6E-A986664CE30602E4_source.jpg?w=590&h=800&2F8476C1-DF14-49BA-84FFE94218CC4933" />
            </div>
        }
        else
        {
            <div class="avatar-picture">
                <img src="@ViewBag.User.Avatar" />
            </div>
        }


        @Html.AntiForgeryToken()
        @Html.Label("Avatar link")
        <br />
        @Html.TextBox("newAvatar", "https://static.scientificamerican.com/blogs/cache/file/BB6F1FE0-4FDE-4E6E-A986664CE30602E4_source.jpg?w=590&h=800&2F8476C1-DF14-49BA-84FFE94218CC4933");
        <br />

        <br />

        @*
            E-mail area
        *@


        @Html.Label("E-mail")
        <br />
        @Html.TextBox("newEmail", (string)@ViewBag.User.Email);
        <br />

        <br />

        @*
            Location area
        *@


        @Html.Label("Location")
        <br />
        @Html.TextBox("newLocation", (string)@ViewBag.User.Location);
        <br />

        <br />


        @*
            Description area
        *@

        @Html.Label("Description")
        <br />
        @Html.TextArea("newDescription", (string)@ViewBag.User.Description);
        <br />

        <br />

    }
    @*
        Roles area
    *@
    Roles: @foreach (var role in @ViewBag.UserRoles)
    {
        <div>@role</div>
    }

    <br />

    @*
        Password area
    *@
    <div>Password:</div>
    <div>
        @if (Model.HasPassword)
        {
            using (Html.BeginForm(actionName: "ChangePassword", controllerName: "Manage", method: FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-warning">Change your password</button>
            }

        }
        else
        {
            using (Html.BeginForm(actionName: "SetPassword", controllerName: "Manage", method: FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-info">Create</button>
            }
        }
    </div>
</div>
