@model ASPForum.Models.Category
@{
    ViewBag.Title = "New";
}

<h2 class="page-title">Creating a new category</h2>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm(actionName: "New", controllerName: "Category", method: FormMethod.Post))
        {

            @Html.HiddenFor(model => model.Id)


            @Html.LabelFor(model => model.Name, "Name")
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

            <br />

            @Html.LabelFor(model => model.Index, "Index")
            @Html.EditorFor(model => model.Index, new { htmlAttributes = new { @class = "form-control" } })

            <br />
            <button type="submit" class="btn btn-info">Create</button>
        }
    </div>
</div>