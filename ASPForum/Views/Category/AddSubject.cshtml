@model ASPForum.Models.Subject

@{
    ViewBag.Title = "Add Subject";
}

<h2>Add Subject</h2>

@using (Html.BeginForm(actionName: "AddSubject", controllerName: "Category", method: FormMethod.Post))
{
    @Html.Hidden("categoryId", (int)ViewBag.CategoryId)
    @Html.AntiForgeryToken()

    @Html.LabelFor(model => model.Name, "Subject:")
    <br />
    @Html.EditorFor(model => model.Name)

    <br />
    @Html.LabelFor(model => model.Index, "Index:")
    <br />
    @Html.EditorFor(model => model.Index)

    <br />
    <button type="submit" class="btn btn-success">Add Subject</button>
}