
@{
                /**/

                /**/

                ViewBag.Title = "ASPForum";
}

<h2>ASPForum</h2>

@if (ViewBag.Categories != null)
{
    foreach (var category in ViewBag.Categories)
    {
        <div class="container category-container">
            <div class="row">
                <div class="col">
                    <div class="row align-content-center align-bottom">
                        <a class="col-auto align-self-center" href="/Category/Show/@category.Id">
                            <div class="category-title">@category.Name</div>
                        </a>
                        @if (ViewBag.hasRights)
                        {

                            <input class="btn btn-primary m-1" type="button"
                                   value="Add Subject"
                                   onclick="location.href='@Url.Action("AddSubject", "Category", new { id = category.Id})'" />


                            <input class="btn btn-warning m-1" type="button"
                                   value="Edit"
                                   onclick="location.href='@Url.Action("Edit", "Category", new { id = category.Id})'" />


                            using (Html.BeginForm(actionName: "Delete", controllerName: "Category", method: FormMethod.Post))
                            {
                                @Html.Hidden("id", (int)category.Id)
                                @Html.HttpMethodOverride(HttpVerbs.Delete)

                                <button type="submit" class="btn btn-danger m-1">Delete Category</button>
                            }
                        }
                    </div>
                    <hr />
                    <div class=" subjects-container">
                        @foreach (var subject in category.Subjects)
                        {
                            <div class="row">
                                <a class="col" href="/Subject/Show/@category.Id/@subject.Id">
                                    <p class="col-auto">@subject.Name</p>
                                </a>
                            </div>
                        }
                        @if (category.Subjects == null || category.Subjects.Count == 0)
                        {
                            <div>This category is empty.</div>
                        }

                    </div>
                    <br />

                </div>
            </div>
        </div>
    }
}

<br />
<br />
<hr />
@if (User.IsInRole("Administrator"))
{
    <input class="btn btn-info m-1" type="button"
           value="Add new category"
           onclick="location.href='@Url.Action("New", "Category")'" />
    <br />
}